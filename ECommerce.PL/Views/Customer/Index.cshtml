@model IEnumerable<ECommerce.BLL.Models.CustomerVmodel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Customers</h1>
<div class="card-box mb-30">
    <a class="btn btn-primary" asp-action="Create" asp-controller="Customer">Add Customer</a>
    <a class="btn btn-primary" asp-action="CheckProducts" asp-controller="Customer"> check products by cst Name</a>


    <h2 class="h4 pd-20">All Products</h2>
    <table class="data-table table nowrap">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>

                <th class="datatable-nosort">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        <h5 class="font-16">@item.name</h5>

                    </td>
                    <td>@item.address</td>
                    <td>@item.phone</td>

                    <td>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item" asp-controller="Customer" asp-action="Details" asp-route-id="@item.id"><i class="dw dw-eye"></i> View</a>
                                <a class="dropdown-item" asp-controller="Customer" asp-action="Edit" asp-route-id="@item.id"><i class="dw dw-edit2"></i> Edit</a>
                                <a class="dropdown-item" asp-controller="Customer" asp-action="delete" asp-route-id="@item.id"><i class="dw dw-delete-3"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>
